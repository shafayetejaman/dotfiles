// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "edit_predictions": {
    "mode": "subtle",
  },
  "status_bar": {
    "experimental.show": false,
  },
  "buffer_line_height": "comfortable",
  "gutter": {
    "min_line_number_digits": 0,
    "folds": false,
    "runnables": false,
  },
  "show_whitespaces": "none",
  "current_line_highlight": "none",
  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },
  "project_panel": {
    "default_width": 400,
    "hide_root": true,
    "auto_fold_dirs": false,
    "starts_open": false,
    "sticky_scroll": false,
    "scrollbar": {
      "show": "never",
    },
    "indent_guides": {
      "show": "never",
    },
  },
  "drag_and_drop_selection": {
    "enabled": false,
  },
  "outline_panel": {
    "default_width": 300,
    "indent_guides": {
      "show": "never",
    },
  },
  "title_bar": {
    "show_onboarding_banner": false,
    "show_user_menu": false,
  },
  "git_panel": {
    "tree_view": false,
  },
  "lsp_highlight_debounce": 9999999999,
  "agent_servers": {
    "your_agent": {
      "type": "custom",
      "command": "path_to_executable",
      "args": [],
      "env": {},
    },
  },
  "icon_theme": "JetBrains Icons Dark",
  "session": {
    "trust_all_worktrees": true,
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never",
  },
  "terminal": {
    "toolbar": {
      "breadcrumbs": false,
    },
    "font_size": 16.0,
    "font_family": "FiraCode Nerd Font",
    "cursor_shape": "bar",
    "copy_on_select": true,
    "shell": {
      "program": "zsh",
    },
  },
  "seed_search_query_from_cursor": "selection",
  "preview_tabs": {
    "enabled": false,
  },
  "tab_bar": {
    "show": false,
  },
  "tabs": {
    "git_status": false,
  },
  "toolbar": {
    "breadcrumbs": false,
    "selections_menu": false,
    "code_actions": false,
    "agent_review": false,
    "quick_actions": false,
  },
  "show_signature_help_after_edits": true,
  "auto_signature_help": true,
  "relative_line_numbers": "enabled",
  "sticky_scroll": {
    "enabled": false,
  },
  "minimap": {
    "show": "never",
  },
  "scrollbar": {
    "axes": {
      "horizontal": true,
      "vertical": false,
    },
  },
  "cursor_blink": false,
  "autosave": "on_focus_change",
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "file_types": {
    "django-html": ["**/templates/*.html"],
  },
  "wrap_guides": [],
  "soft_wrap": "bounded",
  "base_keymap": "VSCode",
  "buffer_font_size": 22,
  "agent_ui_font_size": 20,
  "ui_font_size": 20,
  "inline_code_actions": false,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark",
  },
  "show_completions_on_input": true,
  "show_completion_documentation": false,
  "auto_update": false,
  "auto_update_extensions": { "*": false },
  "when_closing_with_no_tabs": "keep_window_open",
  "extend_comment_on_newline": false,
  "disable_ai": true,
  "show_edit_predictions": false,
}
