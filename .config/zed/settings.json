// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "disable_ai": false,
  "buffer_line_height": "comfortable",
  "current_line_highlight": "none",
  "ui_font_size": 21.0,
  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },
  "git_panel": {
    "tree_view": false,
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "oswe-vscode-prime",
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini",
    },
    "model_parameters": [],
  },
  "lsp_highlight_debounce": 9999999999,
  "agent_servers": {
    "your_agent": {
      "type": "custom",
      "command": "path_to_executable",
      "args": [],
      "env": {},
    },
  },
  "icon_theme": "JetBrains Icons Dark",
  "session": {
    "trust_all_worktrees": true,
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never",
  },
  "terminal": {
    "toolbar": {
      "breadcrumbs": false,
    },
    "font_size": 16.0,
    "font_family": "FiraCode Nerd Font",
    "cursor_shape": "bar",
    "copy_on_select": true,
    "shell": {
      "program": "zsh",
    },
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_menus": false,
    "show_user_menu": false,
    "show_sign_in": true,
    "show_onboarding_banner": true,
  },
  "project_panel": {
    "git_status": false,
    "auto_fold_dirs": false,
  },
  "outline_panel": {
    "git_status": false,
  },
  "preview_tabs": {
    "enabled": false,
  },
  "tab_bar": {
    "show": false,
  },
  "tabs": {
    "git_status": false,
  },
  "toolbar": {
    "breadcrumbs": false,
    "selections_menu": false,
    "code_actions": false,
    "agent_review": false,
    "quick_actions": false,
  },
  "show_signature_help_after_edits": false,
  "auto_signature_help": false,
  "relative_line_numbers": "enabled",
  "sticky_scroll": {
    "enabled": false,
  },
  "gutter": {
    "line_numbers": true,
  },
  "minimap": {
    "show": "never",
  },
  "scrollbar": {
    "axes": {
      "horizontal": true,
      "vertical": false,
    },
  },
  "cursor_blink": false,
  "autosave": "on_focus_change",
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "file_types": {
    "django-html": ["**/templates/*.html"],
  },
  "wrap_guides": [],
  "soft_wrap": "bounded",
  "base_keymap": "VSCode",
  "buffer_font_size": 19.5,
  "inline_code_actions": false,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark",
  },
}
