// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "inlay_hints": {
    "show_other_hints": false,
    "enabled": true
  },
  "git_panel": {
    "tree_view": false
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini",
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini",
    },
    "model_parameters": [],
  },
  "agent_servers": {
    "your_agent": {
      "type": "custom",
      "command": "path_to_executable",
      "args": [],
      "env": {},
    },
  },
  "icon_theme": "JetBrains Icons Dark",
  "session": {
    "trust_all_worktrees": true,
  },
  "vim_mode": true,
  "terminal": {
    "font_size": 16.0,
    "font_family": "FiraCode Nerd Font",
    "cursor_shape": "bar",
    "copy_on_select": true,
    "diagnostics": false,
    "metrics": false,
    "shell": {
      "program": "zsh",
    },
  },
  "title_bar": {
    "show_menus": false,
    "show_user_menu": false,
    "show_sign_in": false,
    "show_onboarding_banner": false,
  },
  "project_panel": {
    "git_status": false,
    "auto_fold_dirs": false,
  },
  "outline_panel": {
    "git_status": false,
  },
  "preview_tabs": {
    "enabled": false,
  },
  "tab_bar": {
    "show": false,
  },
  "tabs": {
    "git_status": false,
  },
  "toolbar": {
    "breadcrumbs": false,
    "selections_menu": false,
    "code_actions": false,
    "agent_review": false,
    "quick_actions": false,
  },
  "show_signature_help_after_edits": false,
  "auto_signature_help": false,
  "relative_line_numbers": "enabled",
  "sticky_scroll": {
    "enabled": false,
  },
  "gutter": {
    "line_numbers": true,
  },
  "minimap": {
    "show": "never",
  },
  "scrollbar": {
    "axes": {
      "horizontal": true,
      "vertical": false,
    },
  },
  "cursor_blink": false,
  "autosave": "on_focus_change",
  "buffer_font_family": "Fira Code",
  "file_types": {
    "django-html": ["**/templates/*.html"],
  },
  "completions": {
    "words": "disabled",
  },
  "wrap_guides": [],
  "soft_wrap": "bounded",
  "base_keymap": "VSCode",
  "ui_font_size": 19,
  "buffer_font_size": 19.5,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark",
  },
}
