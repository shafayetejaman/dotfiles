(defcfg
  process-unmapped-keys yes
)

(defvar
  tap-time 190
  hold-time 200
)

(defsrc
  tab caps ' ;
)

(defalias
  tabcaps (multi f24 (tap-hold $tap-time $hold-time tab caps))

  escctrl (multi f24 (tap-hold $tap-time $hold-time esc lctl))

  ' (multi f24 (tap-hold $tap-time $hold-time ' rmet))
  ; (multi f24 (tap-hold $tap-time $hold-time ; rctl))
)

(deflayer base
  @tabcaps @escctrl @' @;
)

