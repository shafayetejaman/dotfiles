(defcfg
  process-unmapped-keys yes
)

(defvar
  tap-time 100
  hold-time 180
)

(defsrc
  tab caps '
)

(defalias
  tabcaps (multi f24 (tap-hold $tap-time $hold-time tab caps))

  escctrl (multi f24 (tap-hold $tap-time $hold-time esc lctl))

  ' (multi f24 (tap-hold $tap-time $hold-time ' rmet))
)

(deflayer base
  @tabcaps @escctrl @'
)

